//用for循环编写的程序如下:
#include <iostream>
int main()
{
int sum = 0;
for (int i = 50; i <= 100; ++i)
sum += i;
std::cout << "Sum of 50 to 100 inclusive is "
<< sum << std::endl;
}
return 0;
/*
//用while循环编写的程序如下:
#include <iostream>
int main()
{
int sum = 0, int i = 50;
while (i <= 100) {
sum += i;
++i;
}
std::cout << "Sum of 50 to 100 inclusive is "
<< sum << std::endl;
return 0;
}
*/

